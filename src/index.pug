doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title PRX Grove Inventory Management System
    base(href='/')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    for style in css
      link(rel='stylesheet' href=style)
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700')
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    if newRelicHeader
      != newRelicHeader
  body(margin: 0)
    grove-root
      .empty(style='position:absolute;top:0;right:0;bottom:0;left:0;display:flex;align-items:center;justify-content:center;')
        h3(style='font-size:18px;font-weight:200;color:#bbb') Loading...
    script(type='text/javascript')
      != 'window.ENV=' + JSON.stringify(env)
    for script in js
      script(src=script)
    script(src='/assets/google-analytics.js')
